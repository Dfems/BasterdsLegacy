{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": { "@/*": ["./src/*"] },
    "types": ["vitest/globals", "@testing-library/jest-dom", "vite/client"],
    "jsx": "react-jsx",
    "noEmit": true
  },
  "include": [
    "src/__tests__/**/*.ts",
    "src/__tests__/**/*.tsx",
    "src/setupTests.ts",
    "src/**/*.test.ts",
    "src/**/*.test.tsx"
  ],
  "exclude": ["server", "dist", "node_modules"]
}
